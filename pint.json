{
	"preset": "psr12",
	"rules": {
		"array_syntax": {
			"syntax": "short"
		},
		"braces": {
			"position_after_functions_and_oop_constructs": "same"
		},
		"concat_space": {
			"spacing": "one"
		},
		"no_unused_imports": true,
		"trailing_comma_in_multiline": {
			"elements": ["arguments", "arrays", "match", "parameters"]
		}
	},
	"exclude": ["bootstrap/cache", "storage", "vendor"]
}
